<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/homeLayout"
    tools:context=".features.detail.DetailFragment">
    <LinearLayout
        style="@style/homeSubLayout">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"

            tools:src="@tools:sample/avatars" />
        <LinearLayout
            style="@style/detailSubLayout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    style="@style/detailTw1"
                    android:text="@string/id" />
                <TextView
                    android:id="@+id/idTw"
                    style="@style/detailTw2"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/detailTw1"
                    android:text="@string/genre" />
                <TextView
                    android:id="@+id/genreTw"
                    style="@style/detailTw2"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/detailTw1"
                    android:text="@string/releaseDate" />
                <TextView
                    android:id="@+id/releaseTw"
                    style="@style/detailTw2"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/detailSubLayout">
        <LinearLayout
            style="@style/bottomSubLayout">
            <TextView
                style="@style/detailTw1"
                android:layout_weight="1"
                android:text="@string/overview" />
            <TextView
                android:id="@+id/overViewTw"
                style="@style/detailTw2"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            style="@style/bottomSubLayout">
            <TextView
                style="@style/detailTw1"
                android:layout_weight="1"
                android:text="@string/status" />
            <TextView
                android:id="@+id/statusTw"
                style="@style/detailTw2"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            style="@style/bottomSubLayout">
            <TextView
                style="@style/detailTw1"
                android:text="@string/tagline" />

            <TextView
                android:id="@+id/taglineTw"
                style="@style/detailTw2"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            style="@style/bottomSubLayout">
            <TextView
                style="@style/detailTw1"
                android:text="@string/voteCount" />
            <TextView
                android:id="@+id/voteCountTw"
                style="@style/detailTw2"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            style="@style/bottomSubLayout">
            <TextView
                style="@style/detailTw1"
                android:text="@string/voteAverage" />
            <TextView
                android:id="@+id/voteAverageTw"
                style="@style/detailTw2"
                android:text="" />
        </LinearLayout>

    </LinearLayout>















</LinearLayout>